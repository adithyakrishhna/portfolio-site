---
import { Icon } from "astro-icon";
---

<div class="md:w-5/12">
    <form
      action="https://api.web3forms.com/submit"
      method="POST"
      id="form"
      class="needs-validation flex flex-col"
      autocomplete="off"
      novalidate>
      <input type="hidden" name="access_key" value="c7c565bc-fc04-42da-b627-923f3de5153e" />
      <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
      <div class="mb-5">
        <input
          type="text"
          placeholder="Full Name"
          required
          class="text-sm w-full px-4 py-3 border-2 bg-inherit placeholder:text-gray-500 rounded-md outline-none focus:ring-4 border-gray-400 focus:border-gray-600 ring-gray-100"
          name="name"
        />
        <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
          Please provide your full name.
        </div>
      </div>
      <div class="mb-5">
        <label for="email_address" class="sr-only">Email Address</label>
        <input
          id="email_address"
          type="email"
          placeholder="Your Email Address"
          name="email"
          required
          class="text-sm w-full px-4 py-3 border-2 bg-inherit selection:bg-inherit placeholder:text-gray-500 rounded-md outline-none focus:ring-4 border-gray-400 focus:border-gray-600 ring-gray-100"
        />
        <div class="empty-feedback text-red-400 text-sm mt-1">
          Please provide your email address.
        </div>
        <div class="invalid-feedback text-red-400 text-sm mt-1">
          Please provide a valid email address.
        </div>
      </div>
      <div class="mb-3">
        <textarea
          name="message"
          required
          placeholder="Your Message"
          class="text-sm w-full px-4 py-3 bg-inherit border-2 placeholder:text-gray-500 rounded-md outline-none h-36 focus:ring-4 border-gray-400 focus:border-gray-600 ring-gray-100"
        ></textarea>
        <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
          Please enter your message.
        </div>
      </div>
      <button  class="self-center hover:text-secondary hover:transition duration-200 rounded-lg flex items-center justify-center gap-1 border-2 border-current px-6 py-4" type="submit">
        <Icon pack="mdi" name="mail" class="h-6 md:h-8 mr-2"/>
        Send Message
      </button>
      <div id="result" class="mt-3 text-center"></div>
    </form>
</div>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");
  const inputField = document.getElementById("email_address");
  inputField.setAttribute("autocomplete", "off");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    form.classList.add("was-validated");
    if (!form.checkValidity()) {
      form.querySelectorAll(":invalid")[0].focus();
      return;
    }
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Sending...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.classList.add("text-green-500");
          result.innerHTML = json.message;
        } else {
          console.log(response);
          result.classList.add("text-red-500");
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "Something went wrong!";
      })
      .then(function () {
        form.reset();
        form.classList.remove("was-validated");
        setTimeout(() => {
          result.style.display = "none";
        }, 5000);
      });
  });
</script>

  